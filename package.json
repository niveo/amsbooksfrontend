{
  "name": "amsbooksfrontend",
  "version": "0.0.1",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "build:prod": "node ../git-version.js && ng build --configuration production",
    "build:dev": "node git-version.js && ng build --configuration development",
    "test": "ng test",
    "i18n:extract": "ng extract-i18n",
    "analyze": "webpack-bundle-analyzer dist/amsbooksfrontend/stats.json",
    "build:stats": "ng build --configuration production --stats-json",
    "analyzeb": "yarn build:stats && yarn analyze"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.1.0",
    "@angular/cdk": "^17.1.0",
    "@angular/common": "^17.1.0",
    "@angular/compiler": "^17.1.0",
    "@angular/core": "^17.1.0",
    "@angular/forms": "^17.1.0",
    "@angular/platform-browser": "^17.1.0",
    "@angular/platform-browser-dynamic": "^17.1.0",
    "@angular/router": "^17.1.0",
    "@aws-amplify/ui": "^6.0.8",
    "@aws-amplify/ui-angular": "^5.0.8",
    "@tinkoff/ng-dompurify": "4.0.0",
    "aws-amplify": "^6.0.13",
    "dompurify": "3.0.6",
    "ng-zorro-antd": "^17.1.0",
    "ngx-infinite-scroll": "^17.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.1.0",
    "@angular/cli": "~17.1.0",
    "@angular/compiler-cli": "^17.1.0",
    "@angular/localize": "^17.1.0",
    "@types/dompurify": "3.0.5",
    "@types/jasmine": "~4.3.0",
    "jasmine-core": "~4.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.2.2",
    "webpack-bundle-analyzer": "^4.10.1"
  }
}
